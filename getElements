<!-- js -->

let title = document.getElementById("mainTitle");
console.log(title);
title.style.fontSize = "30px";

let paragraphs = document.getElementsByClassName("text");
console.log(paragraphs);
for (let p of paragraphs) {
  p.style.color = "blue";
}

let allParagraphs = document.getElementsByTagName("p");
console.log(allParagraphs);
for (let para of allParagraphs) {
   para.style.marginLeft = "10px";
}

let firstItem = document.querySelector(".list-item");
  console.log(firstItem);
firstItem.style.fontWeight = "bold";

let allItems = document.querySelectorAll(".list-item");
 console.log(allItems);


let box1 = document.getElementById("box1");
let box2 = document.getElementById("box2");
box1.style.backgroundColor = "lightgray";
box2.style.backgroundColor = "lightgray";


